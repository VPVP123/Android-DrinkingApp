<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mobileGamesActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nextlvl_logo"
        android:layout_centerHorizontal="true"/>



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectGameText"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginBottom="80dp"/>

        <Button
            android:id="@+id/neverHaveIEverButton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/NHIE_button"
            android:background="@drawable/rounded_button"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/DOR_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/DOR_button"
            android:background="@drawable/rounded_button"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"/>

            />

        <TextView
            android:id="@+id/submitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Don't like our Never have i ever/ Dares?\nSubmit your own"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </LinearLayout>


</RelativeLayout>