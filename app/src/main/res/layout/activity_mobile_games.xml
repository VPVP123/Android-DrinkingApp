<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileGamesActivity"
    android:background="@drawable/games_black_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit_your_own_textview">

        <ImageView
            android:id="@+id/card_games_nextlvl_logo_imageview"
            android:layout_width="350dp"
            android:layout_height="86dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nextlvl_logo" />

        <TextView
            android:id="@+id/card_games_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="@string/select_game_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/never_have_i_ever_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_button"
            android:text="@string/never_have_i_ever"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dare_or_drink_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/dare_or_drink"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/submit_your_own_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="15dp"
        android:text="@string/dont_like_nhie_dares"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>