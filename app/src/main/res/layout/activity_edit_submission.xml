<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSubmissionActivity">

    <LinearLayout
        android:id="@+id/textArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    <EditText
        android:id="@+id/editSubmissionEng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="13"
        android:minLines="2"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/white"
        android:hint="@string/enter_translation"
        android:gravity="top|start"
        android:textColorHint="@color/white"
        android:maxLines="13"
        android:padding="20sp"
        android:layout_margin="30dp"
        android:inputType="textMultiLine"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/swedish"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editSubmissionSwe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="13"
            android:minLines="2"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/white"
            android:hint="@string/enter_translation"
            android:gravity="top|start"
            android:textColorHint="@color/white"
            android:maxLines="13"
            android:padding="20sp"
            android:layout_margin="30dp"
            android:inputType="textMultiLine"/>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textArea"
    android:gravity="center">

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_marginEnd="60dp"/>

    <Button
        android:id="@+id/buttonDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dismiss"
        android:layout_toEndOf="@id/buttonSubmit"
        android:layout_marginStart="60dp"
        />
</RelativeLayout>


</RelativeLayout>