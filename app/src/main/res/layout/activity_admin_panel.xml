<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminPanelActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="19dp"
            android:text="@string/this_is_the_admin_panel_nwhat_would_you_like_to_do_today"
            android:textColor="@color/white"
            android:layout_marginBottom="80dp"
            app:layout_constraintVertical_bias="0.13" />

        <Button
            android:layout_marginBottom="40dp"
            android:id="@+id/button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/manage_games"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:layout_marginBottom="40dp"
            android:id="@+id/manageSubmissionsButton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:text="@string/new_submitions"
            android:textSize="20dp" />

        <Button
            android:layout_marginBottom="40dp"
            android:id="@+id/buttonLogout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:text="@string/logout"
            android:textSize="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>