<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanelActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/games_black_background">

        <TextView
            android:id="@+id/admin_panel_textview"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="19sp"
            android:text="@string/admin_panel_what_to_do_today"
            android:textColor="@color/white"
            android:layout_marginBottom="80dp"
            app:layout_constraintVertical_bias="0.13" />

        <Button
            android:id="@+id/manage_submissions_button"
            android:layout_marginBottom="40dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:text="@string/new_submissions"
            android:textSize="20sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_marginBottom="40dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:text="@string/logout"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>